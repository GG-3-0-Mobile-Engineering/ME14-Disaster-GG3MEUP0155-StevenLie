<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Disaster" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="bottomSheetDragHandleStyle">@style/BottomSheetLine</item>
    </style>

    <style name="Theme.Disaster" parent="Base.Theme.Disaster">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">
            @style/CustomShapeAppearanceOverlay.MaterialComponents.BottomSheet
        </item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="CustomShapeAppearanceOverlay.MaterialComponents.BottomSheet" parent="">
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetLine" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="tint">@android:color/black</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="SpinnerBackground">
        <item name="android:background">@android:color/white</item>
    </style>
</resources>